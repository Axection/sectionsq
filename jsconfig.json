{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "skipDefaultLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "paths": {
      "~/*": ["./*.d.ts", "./*/index.{vue,js}", "./*"],
      "@/*": ["./*.d.ts", "./*/index.{vue,js}", "./*"]
    },
    "resolveJsonModule": true,
    "types": ["@types/node", "@nuxt/types"]
  },
  "exclude": ["node_modules", ".nuxt", "dist", "build", "static", "coverage", ".vscode"]
}
